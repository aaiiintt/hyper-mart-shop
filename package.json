{
  "name": "hyper-mart-shop",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/styles.css",
    "build:ts": "tsc",
    "build:data": "node scripts/copy-data.mjs",
    "build": "npm run build:data && npm run build:css && npm run build:ts",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./public/styles.css --watch",
    "watch:ts": "tsc --watch",
    "watch": "concurrently \"npm:watch:css\" \"npm:watch:ts\"",
    "start": "node index.js"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.1.0"
  },
  "dependencies": {
    "firebase": "^12.3.0"
  }
}
